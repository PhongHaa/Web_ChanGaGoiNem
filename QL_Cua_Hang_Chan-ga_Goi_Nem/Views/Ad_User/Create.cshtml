@model QL_Cua_Hang_Chan_ga_Goi_Nem.Models.nguoi_dung

@{
    ViewBag.Title = "Create NguoiDung";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>Thêm Tài Khoản Admin</h2>

@using (Html.BeginForm("Create", "Ad_User", FormMethod.Post, new { id = "createForm" }))
{
    <div class="form-group">
        <label for="ten_dang_nhap">Tên đăng nhập</label>
        @Html.TextBoxFor(model => model.ten_dang_nhap, new { @class = "form-control", id = "ten_dang_nhap" })
    </div>
    <div class="form-group">
        <label for="mat_khau_hash">Mật khẩu</label>
        @Html.PasswordFor(model => model.mat_khau_hash, new { @class = "form-control", id = "mat_khau_hash" })
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        @Html.TextBoxFor(model => model.email, new { @class = "form-control", id = "email" })
    </div>
    <div class="form-group">
        <label for="so_dien_thoai">Số điện thoại</label>
        @Html.TextBoxFor(model => model.so_dien_thoai, new { @class = "form-control", id = "so_dien_thoai" })
    </div>
    <div class="form-group">
        <label for="dia_chi">Địa chỉ</label>
        @Html.TextBoxFor(model => model.dia_chi, new { @class = "form-control", id = "dia_chi" })
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    @Html.ActionLink("Cancel", "HienThiNguoiDung", null, new { @class = "btn btn-secondary Cancel" })
}

@section Scripts {
    <script type="text/javascript">
        // Hàm kiểm tra Tên đăng nhập không có dấu và không có khoảng trắng
        function validateUsername(username) {
            // Kiểm tra tên đăng nhập không có khoảng trắng và không có dấu
            const regex = /^[a-zA-Z0-9_]+$/; // Chỉ cho phép chữ cái, số và dấu gạch dưới
            return regex.test(username);
        }

        // Hàm kiểm tra email có đuôi @@email.com hoặc @@yahoo.com
        function validateEmail(email) {
            const regex = /^[a-zA-Z0-9._%+-]+(@@gmail\.com|@@yahoo\.com)$/;
            return regex.test(email);
        }

        // Lắng nghe sự kiện submit của form
        document.getElementById("createForm").addEventListener("submit", function(event) {
            let valid = true;

            // Lấy giá trị các trường
            const username = document.getElementById("ten_dang_nhap").value;
            const email = document.getElementById("email").value;

            // Kiểm tra Tên đăng nhập
            if (!validateUsername(username)) {
                alert("Tên đăng nhập không hợp lệ. Chỉ được sử dụng chữ, số và dấu gạch dưới, không có khoảng trắng hoặc dấu.");
                valid = false;
            }

            // Kiểm tra Email
            if (!validateEmail(email)) {
                alert("Email phải có đuôi @@email.com hoặc @@yahoo.com");
                valid = false;
            }

            // Nếu không hợp lệ, ngừng gửi form
            if (!valid) {
                event.preventDefault();
            }
        });
    </script>
}



